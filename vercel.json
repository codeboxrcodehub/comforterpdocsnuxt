{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "build": {
    "env": {
      "NPM_FLAGS": "--legacy-peer-deps"
    }
  },
  "scripts": {
    "build": "npx nuxi generate"
  },
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
